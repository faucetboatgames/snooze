{
  "name": "snooze",
  "version": "1.0.0",
  "description": "Keep the Bear Sleeping - A TypeScript web game built with Phaser 3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "docs": "typedoc src/main.ts",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "keywords": ["game", "phaser", "typescript", "web-game", "vintage"],
  "author": "Faucet Boat Games",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.1.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  }
}